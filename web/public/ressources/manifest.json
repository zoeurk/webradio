{
	"app":{
		"background":{
			"scripts": [ "object.js", "main.js"],
			"page": "../../index.php",
			"persistent": true
		}
	},
	"manifest_version": 3,
	"host_permissions": [
		"http://*/",
		"http://*/public/php/*"
	],
	"author": "Thomas Marsaleix",
	"name": "ZoeurK JukeBox",
	"short_name": "JukeBox",
	"description": "ZoeurK Metal JukeBox",
	"start_url": ".",
	"version": "0.1~1",
	"version_name": "Hell And Blasphemy",
	"permissions":[
		"webRequest"
	],
	"action":{
		"default_title": "ZoeurK JukeBox",
		"default_area": "menupanel"
	},
	"categories": [
			"Audio",
			"Music", 
			"Metal"
	],
	"icons":[{
			"src": "../images/mush-24x24.png",
			"sizes": "24x24",
			"type": "image/png"
		},
		{
			"src": "../images/mush-48x48.png",
			"sizes": "48x48",
			"type": "image/png"
		},
		{
			"src": "../images/mush-72x72.png",
			"sizes": "72x72",
			"type": "image/png"
		},
		{
			"src": "../images/mush-96x96.png",
			"sizes": "96x96",
			"type": "image/png"
		},
		{
			"src": "../images/mush-128x128.png",
			"sizes": "128x128",
			"type": "image/png"
		}
	],
	"display": "fullscreen",
	"theme": {
		"colors": {
			"frame": "back",
			"tab_background_text": "blue",
			"popup": "blue"
		}
	},
	"background_color": "#0befef"
}
